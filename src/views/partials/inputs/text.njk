{% macro field(name, value = '', type = 'text', label = 'Label', min = 0, max = 2, step = 1) %}
  <div class="flex flex-col my-2">
    <label for="{{ name }}">{{ label }}</label>
    <input
      class="w-full px-2 py-1 bg-gray-200 focus:bg-white rounded border border-black outline-none focus:border-blue-500 "
      type="{{ type }}"
      name="{{ name }}"
      id="{{ name }}"
      value="{{ value }}"
      min="{{ min }}"
      max="{{ max }}"
      step="{{ step }}"
/>
  </div>
{% endmacro %}