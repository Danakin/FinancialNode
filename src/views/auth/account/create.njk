{% extends "../layouts/app.njk" %}

{% import '../../partials/inputs/text.njk' as inputText %}

{% block content %}
  <form action="/users/accounts" method="POST">
    <input type="hidden" name="_csrf" value="{{ _csrf }}">
    {{ inputText.field('name', type='text', label="Account Name") }}
    {{ inputText.field('balance', value="0", type='number', label="Balance", min=-999999999, max=999999999, step=0.01) }}
    {{ inputText.field('color', type='color', label="Color") }}
    <button type="submit" class="bg-blue-500 hover:bg-blue-700 cursor-pointer px-4 py-2 text-white">Submit</button>
  </form>
{% endblock %}